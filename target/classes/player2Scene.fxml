<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="playerSceneHbox" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.colorado.fourdimensionalonedgames.PlayerController">
   <children>
      <VBox>
         <children>
            <Canvas fx:id="enemyGrid" height="440.0" width="440.0" />
            <Pane fx:id="moveInstructionsPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="80.0" prefWidth="396.0" visible="false">
               <children>
                  <Button fx:id="doneButton" layoutX="296.0" layoutY="27.0" mnemonicParsing="false" onAction="#handleDoneButton" prefHeight="26.0" prefWidth="86.0" text="Done" />
                  <Label layoutX="8.0" layoutY="7.0" prefHeight="60.0" prefWidth="275.0" text="Use 'WASD' to move all ships at once" textAlignment="CENTER" textOverrun="CLIP" wrapText="true">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
         </children>
      </VBox>
      <VBox>
         <children>
            <Canvas fx:id="playerGrid" height="440.0" width="440.0" />
            <Pane prefHeight="68.0" prefWidth="440.0">
               <children>
                  <Button fx:id="placeShipButton" layoutX="7.0" layoutY="21.0" mnemonicParsing="false" onAction="#handlePlaceShipButton" text="Place Ship" />
                  <Button fx:id="fireWeaponButton" layoutX="220.0" layoutY="21.0" mnemonicParsing="false" onAction="#handleFireWeaponButton" text="Fire Weapon" />
                  <Button fx:id="passTurnButton" layoutX="349.0" layoutY="21.0" mnemonicParsing="false" onAction="#handlePassTurnButton" text="Pass Turn" />
                  <Button fx:id="undoMoveFleetButton" layoutX="107.0" layoutY="38.0" mnemonicParsing="false" onAction="#handleUndoMoveFleetButton" text="Undo Move" />
                  <Button fx:id="moveFleetButton" layoutX="108.0" layoutY="6.0" mnemonicParsing="false" onAction="#handleMoveFleetButton" text="Move Fleet" />
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</HBox>
